.root-class{
  background-color: #fff;
}
.field{
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
}
.input{
  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 10rpx 0;
}
.clear{
  margin: 0 10rpx;
}
.collapse{
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 100rpx;
  margin-left: 10rpx;
  color: #fff;
  background: #39b54a;
  text-align: center;
  font-weight: 600;
  font-size: 35rpx;
  font-family: SumHei;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}
.control{
  display: inline-block;
  padding: 20rpx 30rpx;
  width: calc(100% - 60rpx);
  overflow: hidden;
}
.control.scroll{
  height: 140rpx;
  display: flex;
}
.li{
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
  box-sizing: border-box;
  width: 25%;
  padding: 20rpx;
  height: 100rpx;
  border: 1px solid #666;
  border-radius: 10rpx;
}
.li.scroll{
  float: none;
}
.hover{
  background: #ddd !important;
}