.root{
  background-color: #fff;
  padding: 10rpx 0;
}
.field{
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  margin: 0 30rpx;
  position: relative;
}
.field::after{
  position: absolute; 
  content: '';
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1px;
  background-color: #e3e5e9;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
  -webkit-transform-origin: center bottom;
  transform-origin: center bottom;
}
.input{
  width: 100%;
  padding: 10rpx 0;
  font-size: 26rpx;
}
.clear{
  margin: 0 10rpx;
}
.collapse{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.mycollapse{
  font-family: SumHei;
  border-radius: 5rpx;
  line-height: 2.55555556;
  min-width: 50rpx;
  font-size: 25rpx;
  padding: 0 20rpx;
  border: 1px solid #39b54a;
  color: #39b54a;
}
.control{
  display: inline-block;
  padding: 20rpx 30rpx;
  width: calc(100% - 60rpx);
  overflow: hidden;
}
.control.scroll{
  height: 140rpx;
  display: flex;
}
.li{
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
  box-sizing: border-box;
  width: 25%;
  padding: 20rpx;
  margin: 1%;
  height: 100rpx;
  border: 1px solid #666;
  border-radius: 4rpx;
  box-shadow: 2rpx 5rpx 0 #000;
}
.li.scroll{
  float: none;
}
.hover{
  background: #ddd !important;
  box-shadow: none;
  transform: translateY(5rpx);
}